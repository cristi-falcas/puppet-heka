[<%= @plugin_name -%>]
type = "TcpInput"
<%= scope.function_template(['heka/plugin/_input.toml.erb']) -%>
use_tls = <%= @use_tls %>
net = "<%= @net -%>"
keep_alive = <%= @keep_alive %>
keep_alive_period = <%= @keep_alive_period %>
address = "<%= @host -%>:<%= @port -%>"

<%= scope.function_template(['heka/plugin/_tls.toml.erb']) %>
